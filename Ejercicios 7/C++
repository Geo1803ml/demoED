#include <iostream>
using namespace std;

int main() {
    int arr[] = {15, 12, 24, 7, 11};
    int n = sizeof(arr)/sizeof(arr[0]);

    cout << "Arreglo inicial: ";
    for (int k=0; k<n; k++) cout << arr[k] << " ";
    cout << endl;

    for (int i = 0; i < n-1; i++) {
        int minIndex = i;

        for (int j = i+1; j < n; j++) {
            if (arr[j] < arr[minIndex]) {
                minIndex = j;
            }
        }

        int temp = arr[i];
        arr[i] = arr[minIndex];
        arr[minIndex] = temp;

        cout << "\n--- SelecciÃ³n " << i+1 << " ---" << endl;
        for (int k=0; k<n; k++) cout << arr[k] << " ";
        cout << endl;
    }

    cout << "\nArreglo ordenado: ";
    for (int k=0; k<n; k++) cout << arr[k] << " ";
}
