#include <iostream>

#include <iostream>
using namespace std;

int main() {
    int arr[] = {2, 21, 80, 32, 61};
    int n = sizeof(arr)/sizeof(arr[0]);

    cout << "Arreglo inicial: ";
    for (int k=0; k<n; k++) cout << arr[k] << " "; 
    cout << endl;

    for (int i = 1; i < n; i++) {
        int key = arr[i];
        int j = i - 1;

        while (j >= 0 && arr[j] > key) {
            arr[j + 1] = arr[j];
            j--;
        }
        arr[j + 1] = key;

        cout << "\n--- InserciÃ³n " << i << " ---" << endl;
        for (int k=0; k<n; k++) cout << arr[k] << " ";
        cout << endl;
    }

    cout << "\nArreglo ordenado: ";
    for (int k=0; k<n; k++) cout << arr[k] << " ";
}
