#include <iostream>
using namespace std;

int main() {
    int arr[] = {5, 6, 8, 7, 2};
    int n = sizeof(arr)/sizeof(arr[0]);

    cout << "Arreglo inicial: ";
    for (int k=0; k<n; k++) cout << arr[k] << " ";
    cout << endl;

    for (int i = 0; i < n-1; i++) {
        cout << "\n--- Pasada " << i+1 << " ---" << endl;
        for (int j = 0; j < n-i-1; j++) {
            if (arr[j] > arr[j+1]) {
                int temp = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = temp;
            }
            for (int k=0; k<n; k++) cout << arr[k] << " ";
            cout << endl;
        }
    }
    cout << "\nArreglo ordenado: ";
    for (int k=0; k<n; k++) cout << arr[k] << " ";
}
