let arr = [23, 12, 8, 4, 1];
let n = arr.length;

console.log("Arreglo inicial:", arr.join(", "));

for (let i = 0; i < n - 1; i++) {
    console.log(`\n--- Pasada ${i+1} ---`);
    for (let j = 0; j < n - i - 1; j++) {
        if (arr[j] > arr[j + 1]) {
            let temp = arr[j];
            arr[j] = arr[j + 1];
            arr[j + 1] = temp;
        }
        console.log(arr.join(", "));
    }
}

console.log("\nArreglo ordenado:", arr.join(", "));
